<h1>Profiles list</h1>

<%= link_to "New", new_profile_path, class: "navbar-wagon-item navbar-wagon-link" %>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>User nÂ°</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td>
          <%= profile.first_name %>
        </td>
        <td>
          <%= profile.last_name %>
        </td>
        <td>
          <%= profile.user.id %>
        </td>
        <td>
          <%= link_to "Show", profile_path(profile.id), class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Edit", edit_profile_path(profile.id), class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Delete", profile_path(profile.id), method: :delete, class:"navbar-wagon-item navbar-wagon-link", data: {confirm: "Are you sure you want to delete this profile?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

