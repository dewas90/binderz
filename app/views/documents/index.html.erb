<h1>Documents list</h1>

<%= link_to "New", new_document_path, class: "navbar-wagon-item navbar-wagon-link" %>

<table class="table">
  <thead>
    <tr>
      <th>Document name</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td>
          <%= document.name %>
        </td>
        <td>
          <%= link_to "Show", document_path(document.id), class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Edit", edit_document_path(document.id), class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Delete", document_path(document.id), method: :delete, class:"navbar-wagon-item navbar-wagon-link", data: {confirm: "Are you sure you want to delete this document?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

